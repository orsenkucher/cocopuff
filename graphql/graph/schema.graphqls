# GraphQL schema example
#
# https://gqlgen.com/getting-started/

directive @auth(
  requires: Role = ADMIN,
) on OBJECT | FIELD_DEFINITION

enum Role {
  ADMIN
  REVIEWER
  USER
  UNKNOWN
}

type Todo {
  id: ID!
  text: String!
  done: Boolean!
  user: User!
}

type User  @auth(requires: USER){
  id: ID!
  name: String! @auth(requires: ADMIN)
}

type Query {
  todos: [Todo!]!
}

input NewTodo {
  text: String!
  userId: String!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
}
